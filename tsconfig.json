{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "es2015"],
    "outDir": "dist/"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}